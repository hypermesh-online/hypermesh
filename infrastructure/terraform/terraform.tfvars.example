# TrustChain Infrastructure Configuration - Example
# Copy this file to terraform.tfvars and customize for your deployment

# Basic Configuration
aws_region  = "us-west-2"
environment = "prod"
domain_name = "trust.hypermesh.online"

# Instance Configuration
instance_type = "c6g.4xlarge"  # ARM-based for high performance
key_pair_name = "trustchain-prod"

# Performance Targets
target_response_time_ms         = 35
max_certificate_operations_per_second = 1000
stoq_target_throughput_gbps    = 40

# Security Configuration
enable_hsm         = true
enable_multi_az    = true
enable_waf         = true
enable_guard_duty  = true

# IPv6 Configuration (REQUIRED)
allowed_ipv6_cidrs = ["::/0"]  # Allow all IPv6 - adjust for production
hypermesh_admin_ipv6_cidrs = [
  "2001:db8:admin::/48"  # Replace with your admin IPv6 range
]

# Monitoring and Alerting
alert_sns_topic_arn = ""  # Add your SNS topic ARN for alerts
enable_detailed_monitoring = true
enable_x_ray_tracing      = true
cloudwatch_log_retention_days = 90

# Storage Configuration
certificate_transparency_retention_days = 2555  # 7 years for compliance
backup_retention_days = 30
enable_cross_region_backup = true
backup_region = "us-east-1"

# Cost Optimization
enable_spot_instances     = false  # Set to true for dev/test environments
enable_reserved_instances = true

# Performance Tuning
ebs_volume_size_gb    = 100
ebs_volume_type       = "gp3"
ebs_iops              = 3000
ebs_throughput_mbps   = 125
placement_group_strategy = "cluster"

# TrustChain Specific
consensus_proof_types = ["PoSpace", "PoStake", "PoWork", "PoTime"]
certificate_rotation_hours = 24
ct_log_max_entries_per_shard = 1000000
dns_over_quic_enabled = true
hypermesh_integration_enabled = true

# Disaster Recovery
rto_minutes = 30  # Recovery Time Objective
rpo_minutes = 5   # Recovery Point Objective